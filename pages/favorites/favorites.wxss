/* pages/favorites/favorites.wxss */
.container {
  min-height: 100vh;
  background-color: var(--color-bg);
  box-sizing: border-box;
}

/* 顶部导航栏 */
.nav-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 30rpx 30rpx;
  background: linear-gradient(180deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0) 100%);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background-color: white;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.back-icon {
  font-size: 32rpx;
  color: var(--color-text-secondary);
}

.back-text {
  font-size: 26rpx;
  color: var(--color-text-primary);
  letter-spacing: 1rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 500;
  color: var(--color-text-primary);
  letter-spacing: 4rpx;
}

.spacer {
  width: 120rpx;
}

/* 滚动容器 */
.favorites-scroll {
  flex: 1;
  height: calc(100vh - 120rpx);
  padding: 0 30rpx 40rpx;
  box-sizing: border-box;
}

.favorites-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding-bottom: 40rpx;
}

.favorite-item {
  background: linear-gradient(135deg, #FFFFFF 0%, #FFFAF5 100%);
  border-radius: 28rpx;
  padding: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.favorite-item::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  background: radial-gradient(circle, rgba(255, 209, 220, 0.1) 0%, transparent 70%);
}

.favorite-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.favorite-date {
  font-size: 20rpx;
  color: var(--color-text-secondary);
  letter-spacing: 2rpx;
  opacity: 0.7;
}

.favorite-keyword {
  font-size: 34rpx;
  font-weight: 500;
  color: var(--color-accent-blue);
  letter-spacing: 4rpx;
}

.favorite-message {
  font-size: 24rpx;
  color: var(--color-text-primary);
  line-height: 1.6;
  letter-spacing: 2rpx;
  font-style: italic;
  opacity: 0.9;
}

.favorite-color {
  display: flex;
  align-items: center;
}

.color-tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  color: #4A4A4A;
  font-weight: 400;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.favorite-actions {
  margin-left: 16rpx;
}

.unfavorite-btn {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #F5F0E8 0%, #E8DED2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.unfavorite-btn:active {
  transform: scale(0.9);
  opacity: 0.8;
}

.unfavorite-icon {
  font-size: 32rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 300rpx 0;
  gap: 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.5;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: var(--color-text-secondary);
  letter-spacing: 2rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #9B9B9B;
  letter-spacing: 1rpx;
}
