/* index.wxss */

/* 页面容器样式 */
.container {
  position: relative;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
  background: radial-gradient(circle at 10% 10%, #FDFBF7 0%, #F2EFE9 100%);
  overflow: hidden;
}

/* 噪点纹理背景 */
.texture-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  background-image: url('data:image/png;base64,');
  opacity: 0.03;
}

/* 顶部胶囊导航 */
.top-nav {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  z-index: 100;
}

/* 胶囊导航容器 */
.nav-pill {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10px);
  border-radius: 40rpx;
  padding: 10rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* 导航项 */
.nav-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: var(--color-text-primary);
  cursor: pointer;
}

/* 导航图标 */
.nav-icon {
  font-size: 28rpx;
}

/* 导航文字 */
.nav-text {
  font-weight: 500;
}

/* 导航分隔线 */
.nav-divider {
  width: 2rpx;
  height: 36rpx;
  background: rgba(0, 0, 0, 0.1);
  margin: 0 10rpx;
}

/* 主内容区 */
.main-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  position: relative;
  z-index: 10;
}

/* 呼吸效果圆形容器 */
.breathing-container {
  position: relative;
  margin-bottom: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 120rpx;
}

/* 茶杯容器 */
.tea-cup {
  width: 230rpx;
  height: 230rpx;
  background: radial-gradient(circle at center, #D9C6B0 30%, #E0D2C5 70%, #E8E0D9 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: inset 10rpx 10rpx 20rpx rgba(166, 145, 126, 0.2), 0 20rpx 40rpx var(--shadow-soft);
  border: 12rpx solid #F9F7F2;
  /* 呼吸动画 */
  animation: breathe 4s ease-in-out infinite;
  overflow: hidden;
}

/* 茶杯高光效果 */
.tea-cup::after {
  content: '';
  position: absolute;
  top: 20%;
  right: 20%;
  width: 60rpx;
  height: 30rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  transform: rotate(45deg);
  box-shadow: 0 0 20rpx rgba(255, 255, 255, 0.8);
}

/* 呼吸动画定义 */
@keyframes breathe {
  0% {
    transform: scale(0.95);
    opacity: 0.9;
  }
  50% {
    transform: scale(1.02);
    opacity: 1;
  }
  100% {
    transform: scale(0.95);
    opacity: 0.9;
  }
}

/* 茶杯震动动画 */
@keyframes shake {
  0%, 100% {
    transform: translateX(0) scale(1);
  }
  20% {
    transform: translateX(-5rpx) scale(1.02);
  }
  40% {
    transform: translateX(5rpx) scale(0.98);
  }
  60% {
    transform: translateX(-3rpx) scale(1.01);
  }
  80% {
    transform: translateX(3rpx) scale(0.99);
  }
}

/* 点击时的震动效果 */
.breathing-container:active .tea-cup {
  animation: shake 0.5s ease-in-out;
}

/* 热气容器 */
.steam {
  position: absolute;
  width: 16rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50px;
  bottom: 20rpx;
  z-index: 1;
  animation: float linear infinite;
}

/* 第一缕热气 */
.steam-1 {
  left: 35%;
  animation-duration: 3s;
}

/* 第二缕热气 */
.steam-2 {
  right: 35%;
  animation-duration: 4.5s;
}

/* 热气浮动动画 */
@keyframes float {
  0% {
    transform: translateY(0) translateX(0) scale(0.8);
    opacity: 0.7;
  }
  25% {
    transform: translateY(-40rpx) translateX(10rpx) scale(0.9);
    opacity: 0.5;
  }
  50% {
    transform: translateY(-80rpx) translateX(-10rpx) scale(1);
    opacity: 0.3;
  }
  75% {
    transform: translateY(-120rpx) translateX(5rpx) scale(1.1);
    opacity: 0.1;
  }
  100% {
    transform: translateY(-160rpx) translateX(0) scale(1.2);
    opacity: 0;
  }
}

/* 竖排欢迎语 */
.vertical-welcome {
  position: absolute;
  right: 20%;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 5;
}

.vertical-text {
  writing-mode: vertical-rl;
  font-size: 36rpx;
  font-weight: 300;
  color: rgba(74, 74, 74, 0.3);
  letter-spacing: 8rpx;
  line-height: 1.8;
}

/* 交互提示文字 */
.hint-text {
  position: absolute;
  bottom: 20%;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  font-size: 20rpx;
  color: #9B9B9B;
  font-weight: 400;
  line-height: 1.4;
  letter-spacing: 1rpx;
  z-index: 5;
}

/* 抽屉式结果卡片 */
.result-drawer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 70vh;
  background: white;
  border-radius: 40rpx 40rpx 0 0;
  box-shadow: 0 -20rpx 60rpx rgba(0, 0, 0, 0.08);
  transform: translateY(100%);
  transition: transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  z-index: 200;
  overflow: hidden;
}

/* 抽屉显示动画 */
.result-drawer.show {
  transform: translateY(0);
}

/* 卡片把手 */
.drawer-handle {
  position: absolute;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 8rpx;
  background: #E8E0D9;
  border-radius: 4rpx;
  z-index: 210;
}

/* 结果内容 */
.result-content {
  padding: 60rpx 40rpx 40rpx;
  height: 100%;
  overflow-y: auto;
  box-sizing: border-box;
}

/* 日签卡片样式 */
.fortune-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.fortune-date {
  font-size: 20rpx;
  color: var(--color-text-secondary);
  margin-bottom: 10rpx;
}

.fortune-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--color-text-primary);
}

.fortune-content {
  display: flex;
  flex-direction: column;
  gap: 50rpx;
}

.fortune-item {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.item-label {
  font-size: 22rpx;
  color: var(--color-text-secondary);
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.item-value {
  font-size: 36rpx;
  font-weight: 500;
  color: var(--color-text-primary);
  line-height: 1.6;
}

.item-value.keyword {
  color: var(--color-accent-cream);
}

.color-display {
  display: inline-flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 30rpx;
  border-radius: 30rpx;
  color: white;
  font-size: 28rpx;
  font-weight: 500;
}

.color-name {
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.item-value.message {
  font-size: 32rpx;
  line-height: 1.8;
  font-weight: 400;
}

.fortune-footer {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.action-group {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 30rpx;
  border: none;
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: var(--color-accent-cream);
  color: white;
}

.action-btn.secondary {
  background: #F5F3F0;
  color: var(--color-text-primary);
}

.action-btn.favorite {
  background: #F5F3F0;
  color: var(--color-text-primary);
}

.action-btn.favorited {
  background: var(--color-success);
  color: white;
}

.btn-icon {
  font-size: 28rpx;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .container {
    padding: 20rpx;
  }
  
  .top-nav {
    top: 20rpx;
    right: 20rpx;
  }
  
  .nav-pill {
    padding: 8rpx 20rpx;
  }
  
  .nav-item {
    padding: 8rpx 16rpx;
    font-size: 22rpx;
  }
  
  .nav-icon {
    font-size: 24rpx;
  }
  
  .tea-cup {
    width: 220rpx;
    height: 220rpx;
    border-width: 10rpx;
  }
  
  .tea-cup::after {
    width: 50rpx;
    height: 25rpx;
  }
  
  .steam {
    width: 14rpx;
    height: 50rpx;
  }
  
  .vertical-text {
    font-size: 32rpx;
    letter-spacing: 6rpx;
  }
  
  .hint-text {
    font-size: 18rpx;
    bottom: 15%;
  }
  
  .result-drawer {
    height: 75vh;
  }
  
  .result-content {
    padding: 50rpx 30rpx 30rpx;
  }
  
  .item-value {
    font-size: 32rpx;
  }
  
  .item-value.message {
    font-size: 28rpx;
  }
}